/* components/function/function-goods/index.wxss */
.main-box {
  display: flex;
  flex-wrap: wrap;
  background-color: white;
  margin: 20rpx 0 0 20rpx;
}
.goods-item {
  width: 47.2%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 20rpx;
}
.goods-img {
  width: 100%;
  display: inline-block;
  background-color: orange;
}
.price-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-name {
  font-size: 26rpx;
  color: #333;
}
.price-box {
  margin-bottom: 10rpx;
}
.price-text {
  color: orange;
  font-size: 22rpx;
  line-height: 40rpx;
}
.buy-btn {
  height: 40rpx;
  width: 90rpx;
  margin-right: 0;
  border-radius: 15rpx;
  background-color: orange;
  color: white;
  font-size: 18rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}